<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.UserProfile">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
         <ImageView
             android:layout_width="100dp"
             android:background="@drawable/man"
             android:layout_marginTop="20dp"
             android:layout_gravity="center_horizontal"
             android:layout_height="100dp" />

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:padding="10dp"
                android:hint="First Name"
                android:id="@+id/firstname"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:id="@+id/lasttname"
                android:hint="Last Name"
                android:layout_weight="1"
                android:layout_height="wrap_content" />




         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:padding="10dp"
                android:id="@+id/mobile"
                android:hint="Pri Contact"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:hint="Sec Contact"
                android:id="@+id/mobile2"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Spinner
                android:layout_width="0dp"
                android:background="@drawable/border"
                android:id="@+id/country"
                android:hint="Country"
                android:layout_weight="1"
                android:layout_height="40dp" />

            <Spinner
                android:layout_width="0dp"
                android:background="@drawable/border"
                android:layout_marginLeft="5dp"
                android:id="@+id/state"
                android:hint="State"
                android:layout_weight="1"
                android:layout_height="40dp" />


         </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <Spinner
                android:layout_width="0dp"
                android:background="@drawable/border"
                android:id="@+id/city"
                android:hint="City"
                android:layout_weight="1"
                android:layout_height="40dp" />

            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:id="@+id/zipcode"
                android:hint="Zipcode"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:padding="10dp"
                android:id="@+id/address"
                android:hint="Address"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:hint="Email"
                android:id="@+id/email"
                android:layout_weight="1"
                android:layout_height="wrap_content" />


         </LinearLayout>


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_marginLeft="20dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal"
             android:layout_height="wrap_content">
            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:id="@+id/email2"
                android:padding="10dp"
                android:hint="Alt Email"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="0dp"
                android:background="#ddd"
                android:layout_marginLeft="5dp"
                android:padding="10dp"
                android:id="@+id/password"
                android:hint="Password"
                android:layout_weight="1"
                android:layout_height="wrap_content" />



         </LinearLayout>

         <Button
             android:layout_width="200dp"
             android:layout_gravity="center_horizontal"
             android:layout_marginLeft="40dp"
             android:layout_marginTop="20dp"
             android:id="@+id/udpatebtn"
             android:background="@drawable/update_btn"
             android:layout_marginRight="40dp"
             android:paddingBottom="20dp"
             android:layout_height="50dp" />
      </LinearLayout>



   </ScrollView>

</LinearLayout>