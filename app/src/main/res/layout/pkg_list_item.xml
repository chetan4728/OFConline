<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/pakage_name"
        android:text="Package Name"
        android:textSize="18sp"
        android:textColor="#333"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="Inactive"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_height="wrap_content" />
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textColor="#333"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:text="Package Validity"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Package Add Limit"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:textColor="#333"

                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#333"
                android:layout_marginTop="5dp"
                android:text="Package Price"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="Package Renewal"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="#333"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pkgvalid"
                android:layout_weight="1"
                android:textColor="#333"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"

                android:id="@+id/pkgLimit"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#333"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pkgprice"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#333"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/benift"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#333"

                android:layout_height="wrap_content" />


        </LinearLayout>


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">



        <Button
            android:layout_width="0dp"
            android:text="Buy Now"
            android:id="@+id/btnbuy"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="@color/colorPrimary"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>