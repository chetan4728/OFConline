<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    tools:context=".Activity.SplashScreen">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="180dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/logo"
        android:layout_height="120dp" />

    <com.nucleosystechnologies.ofconline.Utility.MyTextView
        android:layout_width="match_parent"
        android:text="USERNAME"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="#fff"
        android:paddingLeft="45dp"
        android:id="@+id/email"
        android:textCursorDrawable="@drawable/cursor"
        android:textColorHint="#fff"
        android:background="@drawable/uder1"
        android:textColorHighlight="#ffff"
        android:layout_marginTop="10dp"
        android:layout_height="30dp" />


    <com.nucleosystechnologies.ofconline.Utility.MyTextView
        android:layout_width="match_parent"
        android:text="PASSWORD"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="20sp"

        android:layout_marginTop="30dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textCursorDrawable="@drawable/cursor"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:id="@+id/password"
        android:inputType="textPassword"
        android:paddingLeft="45dp"
        android:background="@drawable/uder2"
        android:textColorHighlight="#ffff"
        android:layout_marginTop="10dp"
        android:layout_height="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:id="@+id/loginbtn"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_b"
        android:layout_height="50dp" />

    <com.nucleosystechnologies.ofconline.Utility.MyTextView
        android:layout_width="match_parent"
        android:text="NOT ACCOUNT? SIGN UP"
        android:textAlignment="center"
        android:textColor="#fff"
        android:id="@+id/signup"

        android:textSize="16sp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>
</LinearLayout>