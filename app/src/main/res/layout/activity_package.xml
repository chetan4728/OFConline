<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".Activity.PackageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/grid_items_border"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
   <TextView
       android:layout_width="match_parent"
       android:text="Your Currently Selected Package:"
       android:padding="10dp"
       android:textSize="14sp"
       android:textStyle="bold"
       android:textColor="#333"
       android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Package Renewal Date:"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_height="wrap_content" />
         <TextView
             android:layout_width="match_parent"
             android:background="#ddd"
             android:layout_height="1dp" />

        <TextView
            android:layout_width="match_parent"
            android:text="Aid Package"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/allradio"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="HOME Aid Package"
                    android:id="@+id/homepck"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:text="Inner Aid Package"
                    android:id="@+id/innerpack"
                    android:textSize="14sp"
                    android:layout_height="wrap_content" />
            </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:text="Pay with Card"
            android:id="@+id/plan1"
            android:textColor="#fff"
            android:textSize="18sp"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/grid_items_border"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Business Promotion Plans"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Business Promotion"
            android:padding="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:text="Pay with Card"
            android:textColor="#fff"
            android:textSize="18sp"
            android:id="@+id/paln2"
            android:layout_height="wrap_content" />



    </LinearLayout>





</LinearLayout>